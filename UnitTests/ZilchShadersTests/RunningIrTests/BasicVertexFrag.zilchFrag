[Vertex]
struct BasicVertexFrag
{
    [StageInput]
    var Position : Real3;
    [StageInput]
    var Uv : Real2;
    [StageInput]
    var Color : Real4;
    
    
    [HardwareBuiltInOutput]
    var ApiPerspectivePosition : Real4;
    
    [EntryPoint]
    function Main()
    {
        this.ApiPerspectivePosition = Real4(this.Position, 1);
    }
}
